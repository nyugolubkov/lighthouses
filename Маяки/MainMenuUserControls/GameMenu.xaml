<UserControl x:Class="Маяки.MainMenuUserControls.GameMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Маяки.MainMenuUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="680">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Button x:Name="newGameButton" 
                Content="Новая игра" 
                Grid.Row="0"
                Click="NewGameButton_Click"/>
        <Button x:Name="loadGameButton" 
                Content="Загрузки" 
                Grid.Row="1"
                Click="LoadGameButton_Click"/>
        <Button x:Name="backButton" 
                Content="Назад" 
                Grid.Row="2"
                Click="BackButton_Click"/>
    </Grid>
</UserControl>
