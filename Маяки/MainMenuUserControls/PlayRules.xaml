<UserControl x:Class="Маяки.MainMenuUserControls.PlayRules"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Маяки.MainMenuUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="680">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Button x:Name="startButton" 
                Content="Играть" 
                Grid.Row="1"
                Click="StartButton_Click"/>
        <Button x:Name="rulesButton" 
                Content="Правила игры" 
                Grid.Row="2"
                Click="RulesButton_Click"/>
    </Grid>
</UserControl>
