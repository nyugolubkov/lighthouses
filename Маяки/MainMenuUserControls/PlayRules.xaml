<UserControl x:Class="Маяки.MainMenuUserControls.PlayRules"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Маяки.MainMenuUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="680">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Button x:Name="gameButton" 
                Content="Играть" 
                Grid.Row="0"
                Click="GameButton_Click"/>
        <Button x:Name="recordsButton"
                Content="Достижения" 
                Grid.Row="1"
                Click="RecordsButton_Click"/>
        <Button x:Name="infoButton" 
                Content="О программе" 
                Grid.Row="2"
                Click="InfoButton_Click"/>
    </Grid>
</UserControl>
